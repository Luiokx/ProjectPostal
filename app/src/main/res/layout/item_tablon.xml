<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#774df2"
    app:cardCornerRadius="12dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <!-- Linear layout padre -->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/profilePostal"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/nameProfilePostal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="8dp"
                android:maxWidth="150dp"
                android:textSize="12sp"
                android:textStyle="italic"
                android:text="Nombre de ejemplo" />
        </LinearLayout>

        <TextView
            android:id="@+id/textTablon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:text="este es un ejemplo para comprobar de que las tabulaciones y el resto esta bien" />

        <!-- Linear layout splitter -->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/likePost"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/ic_unlike" />

            <TextView
                android:id="@+id/likeCountPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:layout_marginStart="8dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/likePost"
                android:text="15" />

            <ImageView
                android:id="@+id/sharePost"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/likeCountPost"
                android:src="@drawable/ic_share" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>