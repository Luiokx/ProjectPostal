<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/titleUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="@string/title_new_entry"
            android:layout_marginTop="50dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/addPostalText"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="top"
            android:layout_below="@+id/titleUpload"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:textSize="14sp"
            android:ems="10"
            android:hint="@string/example_entry"
            android:text="" />

        <Button
            android:id="@+id/btnAddEntry"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/addPostalText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="125dp"
            android:layout_marginEnd="125dp"
            android:layout_marginBottom="15dp"
            android:elevation="4dp"
            android:textAllCaps="false"
            android:letterSpacing=".1"
            android:text="@string/button_add_entry"
            android:background="@drawable/button_background_add"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>